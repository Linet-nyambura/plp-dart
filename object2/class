// Student class
class Student {
  String name;
  int age;
  int gradeLevel;

  Student(this.name, this.age, this.gradeLevel);

  void display() {
    print('The Student: $name, Age: $age, Grade Level: $gradeLevel');
  }
}

// Teacher class
class Teacher {
  String name;
  int age;
  String subject;

  Teacher(this.name, this.age, this.subject);

  void display() {
    print('The teachers: $name, Age: $age, Subject: $subject');
  }
}

// Main class
class School {
  void start() {
    // Create a student object
    var student = Student('Linet Njeri', 13, 8);
    // Create a teacher object
    var teacher = Teacher('Lucy Kabaki', 30, 'English');

    // Display student information
    student.display();
    // Display teacher information
    teacher.display();
  }
}

void main() {
  // Create a School object
  var school = School();
  // Call the run method to display student and teacher information
  school.run();
}

